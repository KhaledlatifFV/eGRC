@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
    <div class="flex min-h-full flex-col justify-center py-4 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <form id="account" method="post">
            <h2 class="mt-2 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Log in</h2>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-[480px]">
                    <div class="bg-white px-6 py-8 shadow sm:rounded-lg sm:px-12">
            <div class="mb-3">
                            <label asp-for="Input.Email" for="email" class="block text-sm font-medium leading-6 text-gray-900">Email</label>
                <input asp-for="Input.Email" class="form-control block w-full px-3 py-2 rounded-md shadow-sm ring-1 ring-gray-300 placeholder-gray-400 focus:ring-2 focus:ring-indigo-600 focus:outline-none" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                            <label asp-for="Input.Password" for="password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
                <input asp-for="Input.Password" class="form-control block w-full px-3 py-2 rounded-md shadow-sm ring-1 ring-gray-300 placeholder-gray-400 focus:ring-2 focus:ring-indigo-600 focus:outline-none" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="flex items-center mb-3">
                <label asp-for="Input.RememberMe" class="form-label flex items-center">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <span class="ml-2 text-sm text-gray-600">@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                </label>
            </div>
            <div>
                            <button id="login-submit" type="submit" class="w-full px-4 py-2 text-sm font-medium text-white bg-cyan-950 rounded-full  hover:bg-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-950">Log in</button>
            </div>
            <div class="mt-3 text-sm text-center">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-cyan-950 hover:underline">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-cyan-950 hover:underline">Register as a new user</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-cyan-950 hover:underline">Resend email confirmation</a>
                </p>
            </div>
                    </div>
                </div>
        </form>
        </div>
    </div>
</body>
</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
